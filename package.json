{
    "name": "simba-task-manager-monorepo",
    "version": "1.0.0",
    "description": "Simba Task Manager - Full Stack Application with Real-Time Communication",
    "type": "module",
    "license": "MIT",
    "scripts": {
        "postinstall": "cd server && npm install",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "cd server && node server.js",
        "dev:client": "cd client && npm run dev",
        "start": "node server/server.js"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=6.0.0"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    }
}